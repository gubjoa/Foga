<%= form_for @post_info do |f| %>

	<% if @post_info.errors.any? %>
	<ul>
		<h4>ERROR(s)</h4>

		<% @post_info.errors.full_messages.each  do |e_message| %>
		<!-- .errors.full_messages.each do |e_message| %> 
		-->
			<li> <%= e_message %> </li>
		<% end %>
		
	</ul>
	<% end %>
	
	<%= f.label :title, "* Titel" %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :comment, "Anmärkning" %><br>
	<%= f.text_area :comment, size: "50x12" %><br>
	<br>
	<%= f.label "* Person" %><br>
	<%= f.text_field :created_by %><br>
	<%= f.text_field :updated_by %><br>
	<br>
	<%= f.label :operation_id, "* Operation Type" %> <br>
	<%= collection_select(:post_info, :operation_id, Operation.all.order("operation_type"), :id, :operation_type, :prompt => "Välj") %>
	<br>
	<br>
	<%= f.submit %>
<% end %>