


<div>

<%= form_for @operation do |f| %>
	<% if @operation.errors.any? %>
		<ul>
			<h4>ERROR(s)</h4>
			<% @operation.errors.full_messages.each  do |e_message| %>
			<!-- .errors.full_messages.each do |e_message| %> -->
			<li> <%= e_message %> </li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :operation_type, "Åtgärd" %> <br>
	<%= f.text_field :operation_type %>
	<br>
	<%= f.label :description, "Beskrivning" %><br>
	<%= f.text_area :description, size: "40x12" %>
	<br><br>
	<%= f.submit "Spara", :disable_with => 'Submiting...' %>
<% end %>
</div>
